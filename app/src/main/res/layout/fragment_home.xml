<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/owlImage"
                    android:layout_width="@dimen/statistics_owl_image_size"
                    android:layout_height="@dimen/statistics_owl_image_size"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/statistics_owl_image_margin"
                    android:contentDescription="@string/owl_image_content_description"
                    android:src="@drawable/own_awake" />

            </FrameLayout>

            <Button
                android:id="@+id/toggleSleepButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle_sleep"
                android:theme="@style/PrimaryFlatButton" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <include layout="@layout/logged_out_content"/>

    <include
        layout="@layout/logged_in_content"
        tools:visibility="gone"/>


</LinearLayout>
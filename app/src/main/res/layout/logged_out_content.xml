<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loggedOutContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/mtrl_card_spacing"
    android:layout_marginLeft="@dimen/mtrl_card_spacing"
    android:layout_marginRight="@dimen/mtrl_card_spacing"
    android:layout_marginTop="@dimen/mtrl_card_spacing">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/image"
            android:layout_margin="@dimen/mtrl_card_text_margin"
            android:gravity="center_vertical"
            android:text="Enable Backup"
            android:textSize="@dimen/mtrl_card_title_text_size"/>

        <TextView
            android:id="@+id/bodyText"
            android:layout_below="@id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/mtrl_card_text_margin"
            android:layout_marginEnd="@dimen/mtrl_card_text_margin"
            android:layout_marginBottom="@dimen/mtrl_card_text_margin"
            android:singleLine="false"
            android:text="Sign in with your Google Account to backup your sleep data."/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:src="@drawable/google_drive"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/signInButton"
            android:layout_below="@id/bodyText"
            android:layout_marginStart="@dimen/mtrl_card_button_margin"
            android:layout_marginBottom="@dimen/mtrl_card_button_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
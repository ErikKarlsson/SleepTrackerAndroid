<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:startDestination="@+id/statistics">
    <fragment
        android:id="@+id/statistics"
        android:name="net.erikkarlsson.simplesleeptracker.feature.statistics.StatisticsFragment"
        android:label="StatisticsFragment"/>

    <fragment
        android:id="@+id/diary"
        android:name="net.erikkarlsson.simplesleeptracker.feature.diary.DiaryFragment"
        android:label="DiaryFragment">
        <action
            android:id="@+id/actionDiaryToDetail"
            app:destination="@id/detail"/>


        <action
            android:id="@+id/actionDiaryToAddSleep"
            app:destination="@id/add"/>

    </fragment>

    <fragment
        android:id="@+id/profile"
        android:name="net.erikkarlsson.simplesleeptracker.feature.profile.ProfileFragment"
        android:label="ProfileFragment"/>

    <activity
        android:id="@+id/detail"
        android:name="net.erikkarlsson.simplesleeptracker.feature.details.DetailActivity"
        android:label="DetailActivity">
        <argument
            android:name="sleepId"
            android:defaultValue="0"
            app:type="integer"/>
    </activity>

    <activity
        android:id="@+id/add"
        android:name="net.erikkarlsson.simplesleeptracker.feature.add.AddSleepActivity"
        android:label="AddSleepActivity">
    </activity>
</navigation>
